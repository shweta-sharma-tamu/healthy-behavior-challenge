                            <%# else %>
                            			<%#âŒ%>
                            <%# end %>
                          </td>
                      <%end%>
                    <% end %>
                    <%end%>
                  <%end%>
                </tr>
              <% end %>               
            </tr>
          </tbody>
        </table>
       
        <div >
          <div class="btn back-btn" style="width: 16rem; padding: 0.5% 0.3%">
            <%= link_to "Back", :back %>
          </div>
          <a href="<%= show_challenges_path %>" class="btn btn-primary show-challenges-btn" style="width: 16rem; padding: 0.5% 0.3%">My Challenges</a>
        <div>
      </div>
    </div>
  </div>

</div>
