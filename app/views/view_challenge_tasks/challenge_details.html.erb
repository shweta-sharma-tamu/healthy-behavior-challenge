        <table class="table">
          <thead>
            <tr>
              <th>Tasks</th>
              <% @challenge_to_do_lists.each do |ch_todo| %>
                <th>  <%= ch_todo[:date].strftime("%B %d, %Y") %>  </th>

              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @challenge.task_ids.each do |t_id| %>
