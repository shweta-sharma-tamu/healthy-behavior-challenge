<div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3" style="margin-top: 15%;">
        <% if flash[:notice] %>
          <div class="alert alert-success text-center">
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-danger text-center">
            <%= flash[:alert] %>
          </div>
        <% end %>
  
        <%= content_tag :h2, "User Sign in", class: 'text-center', style: 'font-weight: 500' %>

        <%= form_with url: sessions_path do |f| %>
          <div class="form-group">
            <%= label_tag :email, 'Email' %>
            <%= f.text_field :email , class: 'form-control', placeholder: 'Enter your email'%>
          </div>
  
          <div class="form-group">
            <%= label_tag :password, 'Password' %>
            <%= f.password_field :password , class: 'form-control', placeholder: 'Enter your password'%>
          </div>
  
          <div class="row">
            <div class="col-md-6">
              <%= link_to "Forgot your password?", password_reset_path %>
            </div>
            <div class="col-md-6" style="align-items: end">
              <%= link_to "New User? Sign Up As Trainee", trainee_signup_path %>
            </div>
            <br><br>
            <div class="col-md-12">
              <%= f.submit "Sign In" , class: 'btn btn-primary btn-block' %>
            </div>
        <% end %>
  
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>



